<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.CigarLuxe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cigarBrown</item>
        <item name="colorPrimaryVariant">@color/cigarBrown</item>
        <item name="colorOnPrimary">@color/cigarCream</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cigarGray</item>
        <item name="colorSecondaryVariant">@color/cigarBlack</item>
        <item name="colorOnSecondary">@color/cigarWhite</item>

        <!-- Accent color. -->
        <item name="colorAccent">@color/cigarAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CigarLuxe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CigarLuxe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CigarLuxe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
